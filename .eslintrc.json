{
    "parserOptions": { 
      "ecmaVersion": 2018 
    },
    "env": { 
      "es6": true, 
      "node": true, 
      "mocha": true 
    }, 
    "plugins": ["react"],
    "parser": "babel-eslint", 
    "rules": { 
      "no-console": "warn", 
      "no-use-before-define": "warn", 
      "react/jsx-uses-react": "error",   
      "react/jsx-uses-vars": "error",
      "spaced-comment": "warn" 
    }, 
    "extends": [ 
      "standard" 
    ]
  } 